<section class="hero py-16">
    <div class="container mx-auto flex justify-between items-center">
        <div class="w-1/2">
            <h6 class="text-2xl"><em>Feeling hungry?</em></h6>
            <h1 class="text-3xl md:text-7xl  font-bold">Order Now!</h1>
            <a href="#menu"><button data-aos="zoom-in-right"
                    class="px-6 py-2 rounded-full mt-4 btn-primary text-white font-bold">Order
                        Now</button></a>
        </div>
        <div class="w-1/2">
            <img class="hero-image" data-aos="fade-down" data-aos-easing="linear" data-aos-duration="1000" src="/public/img/hero-pan.png" alt="burger-hero">
        </div>
    </div>
</section>

<section class="menu container mx-auto py-8 px-4 mb-32">
    <h1 class="text-4xl font-bold mb-8" id="menu">Menu</h1>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3  gap-16 ">

        <% items.forEach(function(item){ %>
            <div data-aos="zoom-out-up" class="card w-full md:w-90">
                <div class="card-image">
                    <img class="h-40 mb-2 mx-auto" src="/public/img/<%= item.image %>" alt="<%= item.name %>">
                </div>
                <div class="text-center">
                    <h2 class="text-xl mb-2">
                        <%= item.name %>
                    </h2>
                    <div class="star-rating flex mt-2 justify-center items-center">
                        <i class="fas fa-star ml-2"></i>
                        <i class="fas fa-star ml-2"></i>
                        <i class="fas fa-star ml-2"></i>
                        <i class="fas fa-star ml-2"></i>
                        <i class="fas fa-star-half-alt ml-2"></i>
                    </div>
                    <p class="mt-3">
                        </pc>
                        <span class="size py-1 px-4 rounded-full uppercase text-sm">
                            <%= item.size %>
                        </span>
                </div>

                <div class="flex items-center justify-around mt-4">
                    <span class="font-bold text-xl">
                            â‚¹<%= item.price%>
                        </span>
                    <button data-pizza="<%= JSON.stringify(item) %>" class="add-to-cart py-1 px-6 rounded-full flex items-center font-bold">
                            <span>+</span>
                            <span>Add</span>
                        </button>
                </div>
            </div>
            <% }) %>


    </div>
</section>